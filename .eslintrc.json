{
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "next",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "import/no-anonymous-default-export": "off",
    "no-restricted-imports": [
      "error",
      {
        "name": "react-i18next",
        "message": "Please import from the next-i18next package instead."
      }
    ],
    "id-length": [2, { "exceptions": ["i", "j", "_", "e"], "properties": "never" }]
  }
}
